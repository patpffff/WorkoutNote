<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Workout.ViewModels"
             xmlns:models="clr-namespace:Workout.Models"
             xmlns:view="clr-namespace:Workout.Views.view"
             x:Class="Workout.Views.WorkoutPage"
             x:DataType="viewModels:WorkoutViewModel">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout>
                <Label 
                    TextColor="Black"
                    FontAttributes="Bold" 
                    FontSize="30" Margin="10,10,10,10" 
                    Text="{Binding Workout.Name}"
                    HorizontalOptions="Center"
                    FontFamily="PricedownBl"></Label>
                <CollectionView ItemsSource="{Binding WorkoutPlanExerciseViews}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="view:WorkoutPlanExerciseView">
                            <SwipeView>
                                <SwipeView.RightItems>
                                    <SwipeItem Text="Delete"
                                               BackgroundColor="LightPink"
                                               Command="{Binding BindingContext.DeleteCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                               CommandParameter="{Binding .}"/>
                                </SwipeView.RightItems>
                                <Border  Margin="10" 
                                         Padding="10"
                                         Stroke="Transparent">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Command="{Binding BindingContext.NavigationCommand,
                  Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                            CommandParameter="{Binding .}"/>
                                    </Border.GestureRecognizers>
                                    <Label Text="{Binding ExerciseName}"
                                           FontFamily="MetropolisBold"
                                           FontSize="20" 
                                           TextColor="Black"
                                           HorizontalOptions="Center"/>
                                </Border>
                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                    <Button 
                        Text="+" 
                        FontAttributes="Bold" 
                        Margin="10"
                        HorizontalOptions="Center"
                        Command="{Binding AddWithPopupCommand}"/> 
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>